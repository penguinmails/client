# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NileDB Configuration
NILEDB_USER=your_niledb_user_id
NILEDB_PASSWORD=your_niledb_password
NILEDB_API_URL=https://us-west-2.api.thenile.dev/v2/databases/your_database_id
NILEDB_POSTGRES_URL=postgres://us-west-2.db.thenile.dev:5432/your_database_name

# Development-specific settings
DEBUG=true
NILEDB_DEBUG=true
NILEDB_SECURE_COOKIES=false

# Convex Configuration
CONVEX_DEPLOYMENT=dev:your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud
CONVEX_DEPLOY_KEY=your-deploy-key-here

# Redis Configuration
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Gemini AI Configuration (Optional)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY='pk_test_zz'
STRIPE_SECRET_KEY='sk_test_zz'
STRIPE_WEBHOOK_SECRET='whsec_xxxxx'
# API Keys for email services
LOOP_API_KEY=your_loop_api_key
LOOP_VERIFICATION_TRANSACTIONAL_ID=your_verification_template_id
LOOP_RESET_TRANSACTIONAL_ID=your_reset_template_id
LOOP_WELCOME_TRANSACTIONAL_ID=welcome
LOOP_NOTIFICATION_TRANSACTIONAL_ID=notification

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60

# Turnstile Configuration
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
