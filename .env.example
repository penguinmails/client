# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# NileDB Configuration
# Get these values from your NileDB dashboard
NILEDB_USER=00000000-0000-0000-0000-000000000000
NILEDB_PASSWORD=nile
NILEDB_API_URL=http://localhost:3000
NILEDB_POSTGRES_URL=postgres://00000000-0000-0000-0000-000000000000:nile@localhost:5443/test

# Convex Configuration
# Get these values from https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud
CONVEX_DEPLOY_KEY=your-deploy-key-here

# Upstash Redis Configuration (Optional - for caching)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Gemini AI Configuration (Optional)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro
