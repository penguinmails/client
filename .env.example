NODE_ENV=development

# NileDB Configuration
# Get these values from your NileDB dashboard
NILEDB_USER=your_user_id_here
NILEDB_PASSWORD=your_password_here
NILEDB_API_URL=your_api_url_here
NILEDB_POSTGRES_URL=postgres://username:password@host:port/database

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NEXTAUTH_SECRET=your-auth-secret
NEXT_PUBLIC_APP_URL=http://localhost:3000


# Loop Email Service (Transactional Emails)
LOOP_API_KEY=your_loop_api_key_here
LOOP_VERIFICATION_TRANSACTIONAL_ID=your_verification_id_here
LOOP_RESET_TRANSACTIONAL_ID=your_reset_id_here
LOOP_WELCOME_TRANSACTIONAL_ID=your_welcome_id_here
LOOP_NOTIFICATION_TRANSACTIONAL_ID=your_notification_id_here


# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60

# Redis Configuration
REDIS_URL="redis://:authpassword@127.0.0.1:6380"

# Gemini AI Configuration (Optional)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Turnstile Configuration (Optional - for bot protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
# Comma-separated list of enabled features (e.g. "turnstile,stripe-billing")
NEXT_PUBLIC_FEATURE_FLAGS="turnstile,stripe-billing"

# Login Attempt Tracking
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=3
NEXT_PUBLIC_LOGIN_ATTEMPT_WINDOW=900

# Backend Infrastructure (Flynet Pro / HestiaCP / KumoMTA)
SERVER_HOSTNAME=your_server_hostname_here
SERVER_ADMIN_USER=admin
SERVER_ADMIN_PASSWORD=your_shared_password_here

# Optional Overrides (defaults are Hestia: 8083, Kumo: 8025)
# HESTIA_PORT=8083
# KUMO_PORT=8025
# KUMO_SENDER_EMAIL=admin@your_server_hostname_here
# MAUTIC_BASE_URL=https://mtc.your_server_hostname_here

