# Local Environment Configuration (Matches Client Docker Setup)
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NileDB Configuration (Default Docker Credentials)
# These match the values in docker-compose.yml
NILEDB_USER=00000000-0000-7000-8000-000000000000
NILEDB_PASSWORD=password
NILEDB_API_URL=http://localhost:3005
NILEDB_POSTGRES_URL=postgres://00000000-0000-7000-8000-000000000000:password@localhost:5443/oltp

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6380

# Auth Secret (Dev)
# Auth Secret (Generate a strong secret for production)
NEXTAUTH_SECRET=place_your_secret_here

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS="stripe-billing"

# Login Limits
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5
NEXT_PUBLIC_LOGIN_ATTEMPT_WINDOW=900

# PostHog Configuration
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# Backend Infrastructure (Flynet Pro)
SERVER_HOSTNAME=your_server_hostname_here
SERVER_ADMIN_USER=admin
SERVER_ADMIN_PASSWORD=your_shared_password_here

# Custom ports if different from defaults
HESTIA_PORT=8083
KUMO_PORT=8025

# PostHog (Disabled/Mock for Dev)
NEXT_PUBLIC_POSTHOG_HOST=http://localhost:3000
